@module simple.Check

@import datatype.Map

{
  // |- (x) => x : (A) -> A
  // ~~~~~~ arrow_intro
  // x: A |- x: A
  // ~~~~~~ lookup_var
  // QED

  ctx = Map.empty
  x = Exp.var("x")
  A = Ty.atom("A")

  Check.arrow_intro(
    Check.lookup_var(Map.Lookup.here)
  ): Check(ctx, Exp.fn("x", x), Ty.arrow(A, A))

  Check(ctx, Exp.fn("x", x), Ty.arrow(A, A))
  ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ Check.arrow_intro
  Check(Map.extend(ctx, "x", A), x, A)
  ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ Check.lookup_var
  Map.Lookup(Map.extend(ctx, "x", A), "x", A)
  ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ Map.Lookup.here
}

{
  // |- (x) => (y) => x : (A) -> (B) -> A
  // ~~~~~~ arrow_intro
  // x: A |- (y) => x : (B) -> A
  // ~~~~~~ arrow_intro
  // x: A, y: B |- x: A
  // ~~~~~~ lookup_var
  // QED

  ctx = Map.empty
  x = Exp.var("x")
  A = Ty.atom("A")
  B = Ty.atom("B")

  Check.arrow_intro(
    Check.arrow_intro(
      Check.lookup_var(Map.Lookup.there(Map.Lookup.here)))
  ): Check(ctx, Exp.fn("x", Exp.fn("y", x)), Ty.arrow(A, Ty.arrow(B, A)))

  Check(ctx, Exp.fn("x", Exp.fn("y", x)), Ty.arrow(A, Ty.arrow(B, A)))
  ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ Check.arrow_intro
  Check(Map.extend(ctx, "x", A), Exp.fn("y", x), Ty.arrow(B, A))
  ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ Check.arrow_intro
  Check(Map.extend(Map.extend(ctx, "x", A), "y", B), x, A)
  ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ Check.lookup_var
  Map.Lookup(Map.extend(Map.extend(ctx, "x", A), "y", B), "x", A)
  ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ Map.Lookup.there
  Map.Lookup(Map.extend(ctx, "x", A), "x", A)
  ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ Map.Lookup.here
}

{
  // y: A |- {(x) => x}(y) : A
  // ~~~~~~ arrow_elim
  // { y: A |- (x) => x : (A) -> A
  //   ~~~~~~ arrow_intro
  //   y: A, x: A |- x : A
  //   ~~~~~~ lookup_var
  //   QED }
  // { y: A |- y: A
  //   ~~~~~~ lookup_var
  //   QED }
  // QED

  ctx = Map.extend(Map.empty, "y", Ty.atom("A"))
  x = Exp.var("x")
  y = Exp.var("y")
  id = Exp.fn("x", x)
  A = Ty.atom("A")

  Check.arrow_elim(
    A,
    Check.arrow_intro(Check.lookup_var(Map.Lookup.here)),
    Check.lookup_var(Lookup.here)): Check(ctx, Exp.ap(id, y), A)

  Check(ctx, Exp.ap(id, y), A)
  ~~~~~~~~~~~~~~~~~~~~~~~~~~~~ Check.arrow_elim
  { A: Ty }
  { Check(ctx, id, Ty.arrow(A, A))
    ~~~~~~~~~~~~~~~~~~~~~~~~~~~~ Check.arrow_intro
    Check(Map.extend(ctx, "x", A), x, A)
    ~~~~~~~~~~~~~~~~~~~~~~~~~~~~ Check.lookup_var
    Map.Lookup(Map.extend(ctx, "x", A), "x", A)
    ~~~~~~~~~~~~~~~~~~~~~~~~~~~~ Map.Lookup.here }
  { Check(ctx, y, A)
    ~~~~~~~~~~~~~~~~~~~~~~~~~~~~ Check.lookup_var
    Map.Lookup(ctx, "y", A)
    ~~~~~~~~~~~~~~~~~~~~~~~~~~~~ Map.Lookup.here  }
}
