@def the_nat_type
@the (Trivial) -> Type
(_) => Nat

@def ABC [ a: Trivial, b: the_nat_type(a), c: String ]

@def abc @the ABC
{ a: sole, b: 2, c: "c" }

// NOTE extra fields

@def abcde @the ABC
{ a: sole, b: 2, c: "c",
  d: "d", e: "e" }

@show abc

@show abc.a
@show abc.b
@show abc.c

// NOTE nested

@def xyz
@the [
  x: String,
  y: String,
  z: ABC
] {
  x: "x",
  y: "y",
  z: abc,
}

@show xyz

@show xyz.z
@show xyz.z.a
@show xyz.z.b
@show xyz.z.c
