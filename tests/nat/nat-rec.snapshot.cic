@fn add(x: Nat, y: Nat): Nat =
  nat_rec(y, x, (prev, almost) => add1(almost))

@fn mul(x: Nat, y: Nat): Nat =
  nat_rec(y, 0, (prev, almost) => add(almost, x))

@fn pow(x: Nat, y: Nat): Nat =
  nat_rec(y, 1, (prev, almost) => mul(almost, x))

@def eight =
  @let four = add(2, 2)
  add(four, four)

@show @the Equal(Nat, eight, pow(2, 3)) same
