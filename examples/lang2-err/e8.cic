add : (Nat) -> (Nat) -> Nat
add = (x) => (y) => Nat.ind(y, (_) => Nat, x, (prev) => (almost) => add1(almost))

Nat_which : (T: Type) -> (target: Nat) -> (base: T) -> (step: (prev: Nat) -> T) -> T
Nat_which = (T) => (target) => (base) => (step) => Nat.ind(target, (_) => T, base, (prev) => (_almost) => step(prev))

gauss : (Nat) -> Nat
gauss = (n) => Nat_which(Nat)(n)(0)((prev) => add(add1(prev))(gauss(prev)))
