#!/usr/bin/env bash

function install {
    npm install
}

function build {
    npm run build
}

function watch {
    npm run watch
}

function format {
    npm run format
}

function docs {
    mkdir -p docs/api &&
        npx typedoc src --out docs/api --mode modules --ignoreCompilerErrors
}

function t {
    test_prog_ext node test.js &&
        test_untyped &&
        true
}

function test_untyped {
    untyped="./bin/untyped.js"

    for file in $(find . | grep "^\./examples/untyped" | grep "\.cic$")
    do
        echo ""
        echo "[test untyped] $file"
        if ! time $untyped eval $file
        then
            exit 1
        fi
    done
}

function test_prog_ext {
    prog=$1
    ext=$2

    for file in $(find . | grep "^\./lib" | grep "\.${ext}$")
    do
        echo ""
        echo "[test] $file"
        if ! time $prog $file
        then
            exit 1
        fi
    done
}

function main {
    for TASK in $@
    do
        $TASK
    done
}

main $@
