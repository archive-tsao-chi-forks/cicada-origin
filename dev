#!/usr/bin/env bash

function install {
    yarn
}

function build {
    yarn run build
}

function t {
    test_prog_ext node js && \
        test_prog_ext bash sh && \
        test_cicada
}

function test_cicada {
    prog=./bin/cicada

    for file in $(find . | grep "^\./examples/" | grep "\.cic$")
    do
        echo ""
        echo "[cicada] $file"
        if ! time $prog --eval $file
        then
            exit 1
        fi
    done
}

function test_prog_ext {
    prog=$1
    ext=$2

    for file in $(find . | grep "^\./lib/" | grep "\.test.*$" | grep "\.${ext}$")
    do
        echo ""
        echo "[test] $file"
        if ! time $prog $file
        then
            exit 1
        fi
    done
}

function main {
    for TASK in $@
    do
        $TASK
    done
}

main $@
